
<h3>Books</h3>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td>
				<%= book.title %>
			</td>
			<td>
				<%= book.body %>
			</td>
			<td>
				<%= link_to "Show", book_path(book.id) %>
                <%= link_to "Edit", edit_book_path(book.id) %>
                <%= link_to "Destroy", destroy_book_path(book.id),method: :delete,"data-confirm" => "Are you sure?" %>
            </td>
        </tr>  
<% end %>
    </tbody>   
</table>




<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
<ul>
	<% @book.errors.full_messages.each do |message| %>
	<li><%= message %></li>
	<% end %>
</ul>
<% end %>
<h2>New book</h2>
<h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
<% end %>
